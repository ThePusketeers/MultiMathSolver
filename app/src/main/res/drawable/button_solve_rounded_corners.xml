<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle" android:padding="15dp">
            <solid android:color="#616161" />
            <corners
                android:bottomRightRadius="30dp"
                android:bottomLeftRadius="30dp"
                android:topLeftRadius="30dp"
                android:topRightRadius="30dp" />
            <stroke android:width="2dp" android:color="#1991FF" />
            <gradient android:angle="-90" android:startColor="#1991FF" android:endColor="#2A67A0"  />

        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle" android:padding="15dp">
            <corners
                android:bottomRightRadius="30dp"
                android:bottomLeftRadius="30dp"
                android:topLeftRadius="30dp"
                android:topRightRadius="30dp" />
            <stroke android:width="2dp" android:color="#1991FF" />
            <gradient android:angle="-90" android:startColor="#1991FF" android:endColor="#2A67A0"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle" android:padding="15dp">
            <gradient android:angle="-90" android:startColor="#2A67A0" android:endColor="#1991FF" />
            <corners
                android:bottomRightRadius="30dp"
                android:bottomLeftRadius="30dp"
                android:topLeftRadius="30dp"
                android:topRightRadius="30dp" />
            <stroke android:width="2dp" android:color="#1991FF" />
        </shape>
    </item>
</selector>